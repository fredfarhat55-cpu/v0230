{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "testMatch": ["**/__tests__/**/*.test.ts", "**/__tests__/**/*.test.tsx"],
  "collectCoverageFrom": ["lib/**/*.{ts,tsx}", "services/**/*.{ts,tsx}", "!**/*.d.ts", "!**/node_modules/**"]
}
